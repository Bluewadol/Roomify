<section class="w-full flex flex-col items-center my-5 container mx-auto px-6 sm:px-0">
    <div class="flex flex-col gap-4 w-full h-screen" data-controller="carousel">
        <div class="flex justify-center items-center w-full h-full overflow-hidden">
            <div class="carousel w-full h-full relative" data-carousel-target="carousel" id="courses-carousel">
                <% images.each_with_index do |image, index| %>
                    <img alt="Room Image" 
                         class="carousel-item absolute top-0 left-0 w-full h-full object-cover transition-opacity duration-500 ease-in-out" 
                         src="<%= image %>" 
                         data-index="<%= index %>">
                <% end %>
            </div>
        </div>
        <div data-carousel-target="indicator" class="flex justify-center gap-2 absolute bottom-5">
        </div>
    </div>
</section>
