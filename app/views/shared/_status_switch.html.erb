<div class="form-group mb-0">
  <div class="flex items-center space-r-2">
    <%= form.check_box :status, 
        { checked: form.object.available?,
          class: "form-input-switch h-6 w-11 rounded-full bg-gray-200 transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2",
          data: { controller: "toggle", action: "change->toggle#toggle" } },
        :available, :unavailable %>
    <%= form.label :status, class: "form-label mb-0 text-sm text-gray-700" do %>
      Available
    <% end %>
  </div>
</div> 