<div class="w-64 min-h-screen bg-white dark:bg-gray-800 shadow-md">
    <div class="p-4">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Roomify</h2>
    </div>
    <nav class="mt-4">
        <ul>
            <li>
                <%= link_to "Home", root_path, class: "block py-2 px-4 text-gray-900 hover:bg-gray-200 dark:text-white dark:hover:bg-gray-700" %>
            </li>
            <li>
                <%= link_to "Rooms", rooms_path, class: "block py-2 px-4 text-gray-900 hover:bg-gray-200 dark:text-white dark:hover:bg-gray-700" %>
            </li>
            <li>
                <%= link_to "My Reservations", reservations_path, class: "block py-2 px-4 text-gray-900 hover:bg-gray-200 dark:text-white dark:hover:bg-gray-700" %>
            </li>
            
            <!-- Admin-specific menu item -->
            <% if user_signed_in? && current_user.has_role?(:admin) %>
                <li>
                    <%= link_to "Admin Rooms", admin_rooms_path, class: "block py-2 px-4 text-gray-900 hover:bg-gray-200 dark:text-white dark:hover:bg-gray-700" %>
                </li>
            <% end %>
            
            <li>
                <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "block py-2 px-4 text-gray-900 hover:bg-gray-200 dark:text-white dark:hover:bg-gray-700" %>
            </li>
        </ul>
    </nav>
</div>
