<%= tag.table class: "table-auto w-full h-[20px]" do %>
    <%= tag.thead do %>
        <%= tag.tr do %>
            <% columns.each do |column| %>
                <%= tag.th column[:header], scope: "col", class: "text-left text-lg p-3 border-b-2 border-slate-200 dark:border-slate-700/80" %>
            <% end %>
        <% end %>
    <% end %>

    <%= tag.tbody do %>
        <% rows.each_with_index do |row, row_index| %>
            <%= tag.tr(class: "border-b hover:bg-gray-50 cursor-pointer", onclick: "window.location='#{path.call(row)}'") do %>
                <% columns.each_with_index do |column, col_index| %>
                    <%= tag.td(class: "py-3 p-3", data: { testid: "row_#{row_index}_col_#{col_index}" }) do %>
                    <%= column[:field].call(row) %>
                    <% end %>
                <% end %>
            <% end %>
        <% end %>
    <% end %>
<% end %>
