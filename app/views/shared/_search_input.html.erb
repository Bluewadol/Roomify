<div class="mb-4 flex gap-4">
  <div class="relative flex items-center w-full">
    <%= icon "magnifying-glass", class: "absolute left-3 size-5 text-gray-500" %>
    
    <%= form.text_field field, value: params[field], class: "form-input h-10 p-2 pl-10 pr-28 rounded-lg w-full" , data: { testid: "#{field}_input" } %>
    
    <% if params[field].present? %>
      <%= icon "x-mark", class: "absolute right-[88px] size-5 text-gray-500 cursor-pointer hover:text-gray-300", 
          onclick: "document.querySelector('[data-testid=#{field}_input]').value = ''; this.closest('form').submit();" %>
    <% end %>

    <%= form.submit "Search", class: "btn btn-secondary absolute right-0 top-0 px-4 py-2 h-full  rounded-r-lg rounded-l-none shadow-sm text-white dark:bg-slate-700 dark:text-slate-100", data: { testid: "#{field}_button" } %>
  </div>
</div>
