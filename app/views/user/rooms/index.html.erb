<div class="container mx-auto p-6">
    <%= render "shared/typography", heading: "Available Meeting Rooms" %>
    <%= form_with(url: rooms_path, method: :get, local: true, 
        class: "p-0 w-full flex flex-wrap", 
        data: { testid: "filter-user-list-room-form", controller: "reset-filter", "reset-filter-target": "form" }) do |form| %>
        <div class="flex gap-0 w-full flex-wrap">

            <div class="p-0 md:pr-2 w-full md:w-1/3 flex-shrink-0">
                <%= render "shared/search_input", form: form, field: :name, value: params[:name] %>
            </div>
            <div class="p-0 md:pr-2 md:pl-2 w-full md:w-1/3 flex-shrink-0">
                <div class="grid grid-cols-2 gap-4">
                    <%= render 'shared/date_time_field', form: form, field: :start_date, field_type: :date_field, value: params[:start_date] %>
                    <%= render 'shared/date_time_field', form: form, field: :end_date, field_type: :date_field, value: params[:end_date] %>
                </div>
            </div>
            <div class="p-0 md:pl-2 w-full md:w-1/3 flex-shrink-0">
                <div class="grid grid-cols-2 gap-4">
                    <%= render 'shared/date_time_field', form: form, field: :start_time, field_type: :time_field, value: params[:start_time] %>
                    <%= render 'shared/date_time_field', form: form, field: :end_time, field_type: :time_field, value: params[:end_time] %>
                </div>
            </div>
        </div>
        <div class="flex gap-4 h-auto w-full">
            <div class="flex flex-col gap-4 h-auto "> 
                <%= render "shared/slider", field: "capacity", id: "capacity", label: "Capacity", maximum: @maximum_capacity, unit: "people" %>
                <%= render "shared/multi_checkboxes", form: form, id: "amenities", label: "Amenities", field: "amenities", options: @amenities %>
                <%= render "shared/multi_checkboxes", form: form, id: "room_status", label: "Room Status", field: "room_status", options: @room_status %>
                <div class="flex justify-start">
                    <button type="button" data-action="reset-filter#reset" class="btn btn-black">Reset Filters</button>
                </div>
            </div>
            <%= render "user/rooms/component/table", room: @room %>
        </div>
    <% end %>
</div>