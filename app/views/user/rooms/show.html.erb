                <%= render "user/rooms/component/up_coming_reservation" %>
            </div>
            <div class="w-full lg:w-1/3 lg:flex-col gap-4 hidden lg:flex">
                <%= render "user/rooms/component/reservation_room"%>
                <%= render "user/rooms/component/booking_room" %>
            </div>
        </div>
    </div>
