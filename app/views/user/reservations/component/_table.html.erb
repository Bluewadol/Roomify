<%= render "shared/table", 
    columns: [
        { header: "Room", field: ->(reservation) { 
            ApplicationController.render(
                    partial: "shared/typography",
                    locals: { sub_heading: reservation.room.name}
                    ).html_safe
            }
        },
        { header: "Date", field: ->(reservation) {  
            if reservation.start_date == reservation.end_date
                format_datetime(reservation.start_date)
            else
                "#{format_datetime(reservation.start_date)} - #{format_datetime(reservation.end_date)}"
            end
            }
        },
        { header: "Time", field: ->(reservation) { "#{format_datetime(reservation.start_time)} - #{format_datetime(reservation.end_time)}" } },
        { 
            header: "Status", 
            field: ->(reservation) {status_badge(reservation.status)}
        },
        (if upcoming
            {
                header: "Actions",
                field: ->(reservation) {
                    content = safe_join([
                        render("user/reservations/component/check_in_btn", reservation: reservation),
                        btn_link_to("Edit", edit_reservation_path(reservation, room_id: reservation.room_id, start_date: reservation.start_date, end_date:reservation.end_date, start_time:reservation.start_time&.strftime("%H:%M"), end_time: reservation.end_time&.strftime("%H:%M")),
                            btn_class: "btn-white inline-flex items-center gap-1 px-4 py-2 text-sm",
                            icon_name: "pencil-square",
                            variant: :solid,
                            onclick: "event.stopPropagation();"
                        )
                        ])
                    tag.div(content, class: "flex flex-wrap justify-start items-center gap-2")
                }
            }
        end)
    ].compact,
    rows: upcoming ? @upcoming_reservations : @past_reservations, 
    path: ->(reservation) { reservation_path(reservation) }
%>
