<div class="container mx-auto p-6">
    <div class="flex h-14 justify-between items-center">
        <%= render "shared/typography", heading: "My Reservation" %>
    </div>
    <div class="flex flex-col gap-6">
        <div class="flex flex-col rounded-md gap-2 bg-white p-6 dark:bg-slate-800 dark:text-white shadow-md w-full">
            <div class="flex justify-between items-center mb-2">
                <%= render "shared/typography", semi_heading: "Upcoming Reservations" %>
                <%= link_to "New Reservation", new_reservation_path, class: "btn btn-primary" %>
            </div>
            <%= render "user/reservations/component/table", reservation: @upcoming_reservations %>
        </div>
        <div class="flex flex-col rounded-md gap-2 bg-white p-6 dark:bg-slate-800 dark:text-white shadow-md w-full">
            <div class="flex justify-between items-center mb-2">
                <%= render "shared/typography", semi_heading: "Past Reservations" %>
            </div>
            <%= render "user/reservations/component/table", reservation: @past_reservations %>
        </div>
    </div>
</div>