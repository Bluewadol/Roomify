<div class="container mx-auto p-6">
    <h1 class="text-2xl font-bold mb-4">Reservations</h1>

    <div class="mb-4">
        <%= link_to "New Reservation", new_reservation_path, class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-lg" %>
    </div>

    <table class="min-w-full bg-white border border-gray-300 shadow-md rounded-lg overflow-hidden">
        <thead class="bg-gray-200">
            <tr>
                <th class="py-2 px-4 border-b text-left">Room</th>
                <th class="py-2 px-4 border-b text-left">Date</th>
                <th class="py-2 px-4 border-b text-left">Date</th>
                <th class="py-2 px-4 border-b text-left">Start Time</th>
                <th class="py-2 px-4 border-b text-left">End Time</th>
                <th class="py-2 px-4 border-b text-left">Status</th>
                <th class="py-2 px-4 border-b text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
        <% @reservations.each do |reservation| %>
            <tr class="border-b hover:bg-gray-100">
                <td class="py-2 px-4"><%= link_to reservation.room.name, reservation_path(reservation), class: "text-blue-600 hover:underline" %></td>
                <!-- <td class="py-2 px-4"><%= reservation.room.name %></td> -->
                <td class="py-2 px-4"><%= reservation.start_date.present? ? reservation.start_date.strftime("%Y-%m-%d") : "N/A" %></td>
                <td class="py-2 px-4"><%= reservation.end_date.present? ? reservation.end_date.strftime("%Y-%m-%d") : "N/A" %></td>
                <td class="py-2 px-4"><%= reservation.start_time.strftime("%H:%M") %></td>
                <td class="py-2 px-4"><%= reservation.end_time.strftime("%H:%M") %></td>
                <td class="py-2 px-4">
                    <% status_classes = { "Completed" => "bg-green-500", "Checked-In" => "bg-blue-500", "Canceled" => "bg-red-500" } %>
                    <span class="text-blue-400 px-3 py-1 rounded-lg <%= status_classes[reservation.status] %>">
                        <%= reservation.status %>
                    </span>
                </td>
                <td class="flex justify-center py-2 px-4 text-center space-x-2">
                    <%= link_to "Edit", edit_reservation_path(reservation), class: "bg-yellow-500 hover:bg-yellow-600 text-white px-3 py-1 rounded-lg text-sm" %>
                    <%= button_to "Delete", reservation, method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-lg text-sm" %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>