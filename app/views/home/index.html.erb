<div class="min-h-screen flex flex-col justify-center items-center text-center">
    <h1 class="text-4xl font-bold text-gray-900 dark:text-white">Roomify</h1>
    <p class="text-lg text-gray-600 dark:text-gray-300 mt-2">The best platform for managing your meeting rooms.</p>
    
    <div class="mt-6 flex">
        <%= link_to "Sign In", new_user_session_path, class: "btn btn-primary mx-2" %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-secondary mx-2" %>
        <% if user_signed_in? %>
        <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger mx-2" %>
        <% end %>
    </div>
</div>
