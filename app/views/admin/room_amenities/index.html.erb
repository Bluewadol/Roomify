<div class="container mx-auto p-6">
    <h1 class="text-2xl font-bold mb-4">Amenities for <%= @room.name %></h1>

    <table class="w-full border-collapse border border-gray-300">
    <thead>
        <tr class="bg-gray-200">
        <th class="border p-2">Name</th>
        <th class="border p-2">Quantity</th>
        <th class="border p-2">Actions</th>
        </tr>
    </thead>
    <tbody>
        <% @amenities.each do |amenity| %>
        <tr class="hover:bg-gray-100">
            <td class="border p-2"><%= amenity.amenity_name %></td>
            <td class="border p-2"><%= amenity.quantity %></td>
            <td class="border p-2">
            <%= link_to "Edit", edit_admin_room_room_amenity_path(@room, amenity), class: "text-yellow-500 hover:underline" %> |
            <%= button_to "Delete", admin_room_room_amenity_path(@room, amenity), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-500 hover:underline" %>
            </td>
        </tr>
        <% end %>
    </tbody>
    </table>

    <%= link_to "Add New Amenity", new_admin_room_room_amenity_path(@room), class: "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg mt-4 block" %>
    <%= link_to "Back to Rooms", admin_rooms_path, class: "bg-gray-400 hover:bg-gray-500 text-white px-4 py-2 rounded-lg mt-4 block" %>
</div>