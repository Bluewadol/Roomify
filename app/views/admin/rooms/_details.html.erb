<div class="bg-white shadow-md rounded-lg p-6">
    <h2 class="text-xl font-semibold mb-4"><%= @room.name %></h2>

    <div class="mb-2">
        <span class="font-medium">Capacity:</span> 
        <%= @room.capacity_min == @room.capacity_max ? @room.capacity_max : "#{@room.capacity_min} - #{@room.capacity_max}" %> คน
    </div>

    <div class="mb-2">
        <span class="font-medium">Status:</span> 
        <span class="px-2 py-1 rounded text-white <%= @room.available? ? 'bg-green-500' : @room.booked? ? 'bg-yellow-500' : 'bg-red-500' %>">
        <%= @room.status.capitalize %>
        </span>
    </div>

    <div class="mb-4">
        <span class="font-medium">QR Code:</span>
        <% if @room.qr_code.attached? %>
        <div class="mt-2">
            <%= image_tag url_for(@room.qr_code.variant(resize_to_limit: [250, 250]).processed), class: "rounded-lg shadow-md" %>
        </div>
        <% else %>
        <span class="text-gray-500">No QR Code</span>
        <% end %>
    </div>

    <div class="mb-4">
        <h3 class="text-lg font-semibold mb-2">Room Images</h3>
        <% if @room.images.attached? %>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                <% @room.images.each do |image| %>
                    <div class="relative">
                        <%= image_tag url_for(image.variant(resize_to_limit: [300, 300]).processed), class: "rounded-lg shadow-md w-full h-auto object-cover" %>
                    </div>
                <% end %>
            </div>
        <% else %>
            <p class="text-gray-500">No Room Images</p>
        <% end %>
    </div>

    <div class="flex space-x-2">
        <%= link_to "Edit", edit_admin_room_path(@room), class: "bg-yellow-500 hover:bg-yellow-600 text-white px-4 py-2 rounded-lg" %>
        <%= link_to "Back", admin_rooms_path, class: "bg-gray-400 hover:bg-gray-500 text-white px-4 py-2 rounded-lg" %>
    </div>

</div>
