<%= render "devise/auth_layout" do %>
  <%= form_with model: resource, url: registration_path(resource_name), method: :post do |f| %>

    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <div class="relative">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_class(resource, :email, has_icon_left: true), data: { testid: "email-input" } %>
        <%= icon "envelope", class: "size-5 absolute left-3 top-3 text-slate-300 peer-focus:text-primary-500/80 opacity-100 transition dark:peer-focus:text-primary-400", data: { testid: "email-icon" } %>
        <%= error_icon(resource, :email) %>
      </div>
      <%= field_error_tag(resource, :email) %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "form-label" %>
      <div class="relative">
        <%= f.password_field :password, autocomplete: "new-password", class: input_class(resource, :password, has_icon_left: true), data: { testid: "password-input" } %>
        <%= icon "lock-closed", class: "size-5 absolute left-3 top-3 text-slate-300 peer-focus:text-primary-500/80 opacity-100 transition dark:peer-focus:text-primary-400", data: { testid: "password-icon" } %>
        <%= error_icon(resource, :password) %>
      </div>
      <% if @minimum_password_length %>
        <p class="text-xs text-slate-500 dark:text-slate-400 mt-1" data-testid="password-length-requirement">
          (<%= @minimum_password_length %> characters minimum)
        </p>
      <% end %>
      <%= field_error_tag(resource, :password) %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "form-label" %>
      <div class="relative">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: input_class(resource, :password_confirmation, has_icon_left: true), data: { testid: "password-confirmation-input" } %>
        <%= icon "lock-closed", class: "size-5 absolute left-3 top-3 text-slate-300 peer-focus:text-primary-500/80 opacity-100 transition dark:peer-focus:text-primary-400", data: { testid: "password-confirmation-icon" } %>
        <%= error_icon(resource, :password_confirmation) %>
      </div>
      <%= field_error_tag(resource, :password_confirmation) %>
    </div>

    <%= f.submit "Sign up", class: "btn btn-primary w-full", data: { testid: "signup-button" } %>

  <% end %>
<% end %>
