<%= render "devise/auth_layout" do %>
  <%= form_with model: resource, url: registration_path(resource_name), method: :post do |f| %>
    <div class="text-center">
      <h1 class="md:h3 h4 my-3 text-slate-900 dark:text-slate-100" data-testid="signup-heading">Sign up for an account</h1>
      <p class="mb-6 text-slate-700 dark:text-slate-200">Already have an account? <%= link_to "Sign in", new_user_session_path, class: "btn-link text-primary-600 dark:text-primary-400", data: { testid: "signin-link" } %></p>
    </div>
    <div class="form-group">
      <%= f.label :email, class: "form-label text-slate-700 dark:text-slate-200", data: { testid: "email-label" } %>
      <div class="relative">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "form-input focus:pl-10 peer transition bg-white dark:bg-slate-800 text-slate-900 dark:text-slate-100 border-slate-300 dark:border-slate-600", 
              data: { testid: "email-input" } %>
        <%= icon "envelope", class: "size-5 absolute translate-x-0 top-3 text-slate-300 peer-focus:text-primary-500/80 opacity-0 transition transform peer-focus:opacity-100 peer-focus:translate-x-3 dark:peer-focus:text-primary-400", data: { testid: "email-icon" } %>
        <%= error_icon(resource, :email) %>
      </div>
      <%= field_error_tag(resource, :email) %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "form-label text-slate-700 dark:text-slate-200", data: { testid: "password-label" } %>
      <div class="relative">
        <%= f.password_field :password, autocomplete: "new-password", 
              class: "form-input focus:pl-10 peer transition bg-white dark:bg-slate-800 text-slate-900 dark:text-slate-100 border-slate-300 dark:border-slate-600",
              data: { testid: "password-input" } %>
        <%= icon "lock-closed", class: "size-5 absolute translate-x-0 top-3 text-slate-300 peer-focus:text-primary-500/80 opacity-0 transition transform peer-focus:opacity-100 peer-focus:translate-x-3 dark:peer-focus:text-primary-400", data: { testid: "password-icon" } %>
        <%= error_icon(resource, :password) %>
      </div>
      <% if @minimum_password_length %>
        <p class="text-xs text-slate-500 dark:text-slate-400 mt-1" data-testid="password-length-requirement">
          (<%= @minimum_password_length %> characters minimum)
        </p>
      <% end %>
      <%= field_error_tag(resource, :password) %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "form-label text-slate-700 dark:text-slate-200", data: { testid: "password-confirmation-label" } %>
      <div class="relative">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", 
              class: "form-input focus:pl-10 peer transition bg-white dark:bg-slate-800 text-slate-900 dark:text-slate-100 border-slate-300 dark:border-slate-600",
              data: { testid: "password-confirmation-input" } %>
        <%= icon "lock-closed", class: "size-5 absolute translate-x-0 top-3 text-slate-300 peer-focus:text-primary-500/80 opacity-0 transition transform peer-focus:opacity-100 peer-focus:translate-x-3 dark:peer-focus:text-primary-400", data: { testid: "password-confirmation-icon" } %>
        <%= error_icon(resource, :password_confirmation) %>
      </div>
      <%= field_error_tag(resource, :password_confirmation) %>
    </div>

    <%= f.submit "Sign up", class: "btn btn-primary w-full text-white dark:text-slate-100", data: { testid: "signup-button" } %>

  <% end %>
<% end %>
