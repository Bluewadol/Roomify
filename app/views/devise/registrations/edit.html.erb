<%= render "devise/auth_layout" do %>
  <%= form_with model: resource, url: registration_path(resource_name), method: :put do |f| %>

    <%= render "rui/shared/error_messages", resource: resource, data: { testid: "error-messages" } %>

    <div class="form-group">
      <%= f.label :email, class: "form-label text-slate-700 dark:text-slate-200", data: { testid: "email-label" } %>
      <div class="relative">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", 
              class: "form-input focus:pl-10 peer transition bg-white dark:bg-slate-800 text-slate-900 dark:text-slate-100 border-slate-300 dark:border-slate-600",
              data: { testid: "email-input" } %>
        <%= icon "envelope", class: "size-5 absolute translate-x-0 top-3 text-slate-300 peer-focus:text-primary-500/80 opacity-0 transition transform peer-focus:opacity-100 peer-focus:translate-x-3 dark:peer-focus:text-primary-400",
              data: { testid: "email-icon" } %>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-slate-600 dark:text-slate-400" data-testid="pending-confirmation">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :password, "New password (leave blank if you don't want to change it)", 
            class: "form-label text-slate-700 dark:text-slate-200", 
            data: { testid: "new-password-label" } %>
      <div class="relative">
        <%= f.password_field :password, autocomplete: "new-password", 
              class: "form-input focus:pl-10 peer transition bg-white dark:bg-slate-800 text-slate-900 dark:text-slate-100 border-slate-300 dark:border-slate-600",
              data: { testid: "new-password-input" } %>
        <%= icon "lock-closed", class: "size-5 absolute translate-x-0 top-3 text-slate-300 peer-focus:text-primary-500/80 opacity-0 transition transform peer-focus:opacity-100 peer-focus:translate-x-3 dark:peer-focus:text-primary-400",
              data: { testid: "new-password-icon" } %>
      </div>
      <% if @minimum_password_length %>
        <p class="mt-1 text-sm text-slate-600 dark:text-slate-400" data-testid="password-length-requirement">
          <%= @minimum_password_length %> characters minimum
        </p>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Confirm new password", 
            class: "form-label text-slate-700 dark:text-slate-200",
            data: { testid: "password-confirmation-label" } %>
      <div class="relative">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", 
              class: "form-input focus:pl-10 peer transition bg-white dark:bg-slate-800 text-slate-900 dark:text-slate-100 border-slate-300 dark:border-slate-600",
              data: { testid: "password-confirmation-input" } %>
        <%= icon "lock-closed", class: "size-5 absolute translate-x-0 top-3 text-slate-300 peer-focus:text-primary-500/80 opacity-0 transition transform peer-focus:opacity-100 peer-focus:translate-x-3 dark:peer-focus:text-primary-400",
              data: { testid: "password-confirmation-icon" } %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :current_password, "Current password (required to confirm changes)", 
            class: "form-label text-slate-700 dark:text-slate-200",
            data: { testid: "current-password-label" } %>
      <div class="relative">
        <%= f.password_field :current_password, autocomplete: "current-password", 
              class: "form-input focus:pl-10 peer transition bg-white dark:bg-slate-800 text-slate-900 dark:text-slate-100 border-slate-300 dark:border-slate-600",
              data: { testid: "current-password-input" } %>
        <%= icon "key", class: "size-5 absolute translate-x-0 top-3 text-slate-300 peer-focus:text-primary-500/80 opacity-0 transition transform peer-focus:opacity-100 peer-focus:translate-x-3 dark:peer-focus:text-primary-400",
              data: { testid: "current-password-icon" } %>
      </div>
    </div>

    <%= f.submit "Update", class: "btn btn-primary hover:cursor-pointer w-full text-white dark:text-slate-100", data: { testid: "update-button" } %>
  <% end %>
<% end %>

<% content_for :masthead do %>
  <div class="text-center">
    <h1 class="md:h3 h4 my-3 text-slate-900 dark:text-slate-100" data-testid="edit-account-heading">Edit Account</h1>
    <p class="mb-6 text-slate-700 dark:text-slate-200">Update your email or password below.</p>
  </div>
<% end %>

<% content_for :links do %>
  <div class="text-center mt-6">
    <%= button_to "Cancel my account", registration_path(resource_name), 
          data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?", testid: "cancel-account-button" }, 
          method: :delete, 
          class: "btn btn-danger text-white dark:text-slate-100" %>
  </div>
  <div class="text-center mt-3">
    <%= link_to "Back", :back, class: "btn-link text-primary-600 dark:text-primary-400", data: { testid: "back-link" } %>
  </div>
<% end %>
